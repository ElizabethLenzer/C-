@model User

<h3 class="text-center">Register</h3>
<hr />

<form asp-controller="Home" asp-action="Register" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger font-weight-bold"></span>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control"  />
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <span asp-validation-for="PasswordConfirm" class="text-danger font-weight-bold"></span>
        <input asp-for="PasswordConfirm" class="form-control"  />
    </div>

    <button class="btn btn-primary">Register</button>
</form>