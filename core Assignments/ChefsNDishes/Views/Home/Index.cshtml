<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs And Dishes</title>
</head>
<body>
    @model Chef
    <h1>Chefs | <a href="/Dishes">Dishes</a></h1>
    <a href="/new" class="btn btn-primary">Add a Chef</a>
    <h2>Check our roster of Chefs!</h2>
    <table class="table col-sm-8 mx-auto">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Age</th>
                <th scope="col"># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var Chef in  @ViewBag.allchefs){
                <tr>
                    <td>@Chef.FirstName</td>
                    <td>@Chef.LastName</td>
                    <td>@Chef.Age</td>
                    <td>@Chef.dishes.Count</td>
                </tr>
                }
            }
            <tr>
        <th scope="row"></th>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <th scope="row"></th>
            <td></td>
            <td></td>
        </tr>
        </tbody>
    </table>
</body>
</html>