<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dishes</title>
</head>
<body>
    @model Dish

    <h1><a href="/">Chefs</a> | Dishes</h1>
    <a href="/dishes/new" class="btn btn-primary">Add a Dish</a>
    <h2>Yum, take a look at our tasty dishes!</h2>
    <table class="table col-sm-8 mx-auto">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
    <tbody>
    
        @{
            foreach(var Dish in @ViewBag.alldishes){
            <tr>
                <td>@Dish.DishName</td>
                <td>@Dish.Creator.FirstName</td>
                <td>@Dish.Tastiness</td>
                <td>@Dish.Calories</td>
            </tr>
            }
        }
        <tr>
            <th scope="row"></th>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
</body>
</html>