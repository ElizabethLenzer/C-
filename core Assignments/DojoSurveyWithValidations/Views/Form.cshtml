<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h3>Please enter your information:</h3>
    @*Name
    Location
    Language
    Comment*@
    <form method="POST" action="result">
        <label for="name_box">Name: </label>
        <input type="text" name="Name" id="name_box">
        <br>
        <label for="location_box"></label>
        <select name="Location" id="location_box">
            <option value="Seattle">Seattle</option>
            <option value="Portland">Portland</option>
            <option value="Los Angeles">Los Angeles</option>
            <option value="Washington DC">Washington DC</option>
        </select>
        <br>
        <label for="language_box"></label>
        <select name="Language" id="language_box">
            <option value="HTML">HTML</option>
            <option value="JAVA SCRIPT">JAVA SCRIPT</option>
            <option value="CSS">CSS</option>
            <option value="PYTHON">PYTHON</option>
            <option value="JAVA">JAVA</option>
            <option value="C#">C#</option>
        </select>
        <br>
        <label for="comment_box"></label>
        <textarea name="Comment" id="comment_box" cols="30" rows="10"></textarea>
    </form>
</body>
</html>